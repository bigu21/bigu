template(name="chatShow")
  +contentFor("headerTitle")
    h1.title Conversa 
    
  +contentFor("headerButtonLeft")
    +ionNavBackButton(class="button-positive" text="Caronas") 

  +ionView
    +ionContent(class="padding")
      each messages
        if(isOther userId)
          .messages.other
            .msg
              span #{message}
        else
          .messages
            .msg
              span #{message}
    +ionFooterBar(class="item-input-inset" attachKeyboard="true")
      label(class="item-input-wrapper")
        input#msg(type="text")
      button.button.button-clear Enviar
